{
  "name": "database-query-tool",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "pm2:dev": "pm2 start ecosystem.config.js --only dev",
    "pm2:prod": "pm2 start ecosystem.config.js --only prod",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:list": "node scripts/pmlist.js",
    "pm2:clear": "bash scripts/clear-ports.sh",
    "test": "playwright test",
    "test:verbose": "playwright test --reporter=list",
    "test:debug": "playwright test --debug",
    "test:ui": "bash scripts/start-playwright-ui.sh",
    "test:headed": "xvfb-run --auto-servernum --server-args='-screen 0 1280x720x24' playwright test --headed",
    "test:report": "playwright show-report",
    "test:project": "playwright test --project=chromium",
    "test:file": "playwright test"
