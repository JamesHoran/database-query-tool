    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
